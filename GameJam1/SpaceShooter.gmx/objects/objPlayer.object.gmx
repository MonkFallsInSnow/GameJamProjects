            <string>mineForce = 300;

//reduce shield str and push back player
if(objShield.shieldDown == false)
{   
    //approaching mine from the right
    if(playerDir &gt;= 0 &amp;&amp; playerDir &lt;= 45)
    {
        destX = x - mineForce;
      
    }
    else if(playerDir &gt;= 316 &amp;&amp; playerDir &lt;= 360)
    {
        destX = x - mineForce;
    }
    //approaching mine from the left
    else if(playerDir &gt;= 135 &amp;&amp; playerDir &lt;= 225)
    {
        destX = x + mineForce;
    }
    //approaching mine from above
    else if(playerDir &gt;= 46 &amp;&amp; playerDir &lt;= 136)
    {
        destY = y + mineForce;
    }
    //approaching mine from below
    else if(playerDir &gt;= 226 &amp;&amp; playerDir &lt;= 315)
    {
        destY = y - mineForce;
    }
    
    if(hitMine)
    {
        switch(objShield.shieldStr)
        {
            case objShield.fullStr:
                objShield.shieldStr = objShield.midStr;
                break;
            case objShield.midStr:
                objShield.shieldStr = objShield.lowStr;
                break;
            case objShield.lowStr:
                objShield.shieldStr = objShield.noStr;
                break;
            default:
                break;    
        }
        hitMine = false;
    }
}
//destroy player if shield is down
if(objShield.shieldStr == objShield.noStr &amp;&amp; hitMine)
{
    instance_create(x,y,objPlayerExplosion);
    instance_destroy();
}
